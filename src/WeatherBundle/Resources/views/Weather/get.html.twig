{% extends "::base.html.twig" %}
{% block title %}Nowa strona {% endblock %}
{% block body %}
    <div class="container">
        <div id="weather">
            <form action="{{ asset('get') }}" method="post">
                {% if selectedCity == null %}
                    {% set selectedCity = cities[0].name %}
                {% endif %}
                <select name="selectCity" onchange="form.submit()" id="citySelection" city="{{ selectedCity }}">
                    {% for city in cities %}
                        <option value="{{ city.code }}|{{ city.name }}" class="selectCityOption">{{ city.name }}</option>
                    {% endfor %}
                </select>
            </form>
            <img src="" width="100" id="graphic" style="margin-left:10px"><br>
            <span id="temp" style="font-size: 120%"></span><br>
        </div>
    </div>
{% endblock %}